{
  "name": "video-bones",
  "version": "1.0.0",
  "description": "A simple-to-use video editor",
  "main": "build/main/index.js",
  "scripts": {
    "start": "electron .",
    "clean": "rimraf build dist",
    "dev": "npm run bundle -- --watch",
    "bundle": "webpack --config webpack.config.js",
    "dist": "npm run dist:windows && npm run dist:mac && npm run dist:linux",
    "dist:windows": "electron-builder --windows --config electron-builder.json",
    "dist:mac": "electron-builder --macos --config electron-builder.json",
    "dist:linux": "electron-builder --linux --config electron-builder.json",
    "build": "npm run clean && NODE_ENV=production npm run bundle && npm run dist",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "lint:css": "stylelint --aei \"src/**/*.{css,scss,sass}\"",
    "lint:js": "eslint --ext .js,.ts,.tsx,.json src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VikaasVarma/VideoBones.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/VikaasVarma/VideoBones/issues"
  },
  "homepage": "https://github.com/VikaasVarma/VideoBones#readme",
  "dependencies": {
    "vue": "^3.2.29"
  },
  "devDependencies": {
    "@types/node": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "css-loader": "^6.6.0",
    "electron": "^17.0.0",
    "electron-builder": "^22.14.13",
    "eslint": "^8.8.0",
    "html-webpack-plugin": "^5.5.0",
    "rimraf": "^3.0.2",
    "sass": "^1.49.7",
    "sass-loader": "^12.4.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.3.0",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-scss": "^4.1.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "vue-loader": "^17.0.0",
    "vue-style-loader": "^4.1.3",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2"
  },
  "private": true
}
